{
  "name": "Multiple panels",
  "description": "Multiple panels with an image or text",
  "fields": [
    {
      "label": "Content",
      "type": "field_group",
      "fields": [
        {
          "id": "panels",
          "label": "Panels",
          "type": "collection",
          "min": 2,
          "max": 4,
          "item_types": [
            {
              "id": "text",
              "label": "Text",
              "fields": [
                {
                  "label": "Content",
                  "type": "field_group",
                  "fields": [
                    {
                      "id": "heading",
                      "label": "Heading text",
                      "type": "text",
                      "required": true
                    },
                    {
                      "id": "description",
                      "label": "Description text",
                      "type": "textarea"
                    },
                    {
                      "id": "links",
                      "label": "Links",
                      "type": "collection",
                      "max": 2,
                      "fields": [
                        {
                          "id": "label",
                          "label": "Label text",
                          "type": "text",
                          "required": true
                        },
                        {
                          "id": "url",
                          "label": "Link URL",
                          "type": "url",
                          "required": true
                        }
                      ]
                    }
                  ]
                },
                {
                  "label": "Styling",
                  "type": "field_group",
                  "fields": [
                    {
                      "id": "text_align",
                      "label": "Text alignment",
                      "type": "select",
                      "default": "left",
                      "options": [
                        {
                          "value": "left",
                          "label": "Left"
                        },
                        {
                          "value": "center",
                          "label": "Center"
                        }
                      ]
                    },
                    {
                      "id": "bg_color",
                      "label": "Background color",
                      "type": "select",
                      "default": "primary-lightest",
                      "options": [
                        {
                          "value": "primary-lightest",
                          "label": "Background (primary)"
                        },
                        {
                          "value": "primary-lighter",
                          "label": "Background (secondary)"
                        }
                      ]
                    },
                  ]
                }
              ]
            },
            {
              "id": "image",
              "label": "Image",
              "fields": [
                {
                  "id": "image",
                  "label": "Background image",
                  "type": "image",
                  "required": true
                }
              ]
            }
          ]
        }
      ]
    }
  ]
}
